<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NodesMainMenu"
        tools:targetApi="31">
        <activity
            android:name=".nodes.Profile"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="@string/title_activity_profile"
            android:theme="@style/Theme.NodesMainMenu.Fullscreen" />
        <activity
            android:name=".nodes.NotesGroup"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="@string/title_activity_notes_group"
            android:theme="@style/Theme.NodesMainMenu.Fullscreen" />
        <activity
            android:name=".nodes.FullscreenActivityGroup"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="@string/title_activity_fullscreen_group"
            android:theme="@style/Theme.NodesMainMenu.Fullscreen" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".nodes.FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.NodesMainMenu.Fullscreen" />
        <activity
            android:name=".nodes.NotesSingle"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="@string/title_activity_notes_single"
            android:theme="@style/Theme.NodesMainMenu.Fullscreen" />
        <activity
            android:name=".nodes.FullscreenActivitySingle"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="@string/title_activity_fullscreen_single"
            android:theme="@style/Theme.NodesMainMenu.Fullscreen" />
    </application>

</manifest>